{{define "base"}}
<!DOCTYPE html>
<html lang="zh-CN">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>This is Title</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>

  {{template "header" .}}

  <main class="container">
    {{with .Flash}}
    <br>
      <div class="flash bg-green-100 border border-green-400 text-green-900 px-4 py-3 rounded relative" role="alert">
        <span class="block sm:inline">{{.}}</span>
      </div>
    <br>
    {{end}}

    {{template "content" .}}
  </main>

  {{template "footer" .}}

  <script src="/assets/js/main.js"></script>
</body>
</html>

{{end}}
