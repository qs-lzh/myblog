{{define "base"}}
<!DOCTYPE html>
<html lang="zh-CN">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>This is Title</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>

  <header class="bg-blue-600 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex-shrink-0">
          <a href="#" class="text-2xl font-bold">MyLogo</a>
        </div>

        <!-- 导航菜单（大屏显示） -->
        <nav class="hidden md:flex space-x-8">
          <a href="#" class="hover:text-gray-200">首页</a>
          <a href="#" class="hover:text-gray-200">关于</a>
          <a href="#" class="hover:text-gray-200">服务</a>
          <a href="#" class="hover:text-gray-200">联系</a>
        </nav>

        <!-- 按钮 / 小屏菜单 -->
        <div class="md:hidden">
          <button class="text-white focus:outline-none">
            <!-- 汉堡图标 -->
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </header>

  <main class="container">
    {{template "content" .}}
  </main>
  <footer class="bg-blue-600 text-white py-6 mt-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      &copy; 2025 MyWebsite. All rights reserved.
    </div>
  </footer> 
  
  <script src="/assets/js/main.js"></script>
</body>
</html>

{{end}}
