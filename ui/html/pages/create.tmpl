{{define "content"}}

<form action="/create" method="post" class="space-y-4">

  <!-- Title -->
  <div>
    <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
    <input type="text" id="title" name="title"
      class="mt-1 w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
  </div>

  <!-- Content -->
  <div>
    <label for="content" class="block text-sm font-medium text-gray-700">Content</label>
    <textarea id="content" name="content" rows="10"
      class="mt-1 w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"></textarea>
  </div>

   <!-- 提交按钮 -->
  <button type="submit"
    class="w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg shadow hover:bg-blue-700 transition duration-200">
    Create
  </button>
</form>


{{end}}
