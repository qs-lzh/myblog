{{define "content"}}
<div class="max-w-3xl mx-auto mt-10 p-6 bg-white rounded-xl shadow-md">
  <!-- 顶部：用户信息 + 按钮 -->
  <div class="flex justify-between items-center">
    <!-- 用户基本信息 -->
    <div>
      <h2 class="text-2xl font-bold text-gray-900">{{.AA}}</h2>
      <p class="text-gray-500">{{.AA}}</p>
      {{if .AA}}
      <p class="mt-2 text-gray-700">{{.}}</p>
      {{end}}
    </div>

    <!-- 注册、登录按钮 -->
    <div class="space-x-3">
      <a href="/user/signup" 
         class="px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition">
        Signup
      </a>
    </div>

    <div class="space-x-3">
      <a href="/user/login" 
         class="px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition">
        Login
      </a>
    </div>

  </div>

  <!-- 其他信息示例 -->
  <div class="mt-6 grid grid-cols-2 gap-4">
    <div class="p-4 bg-gray-100 rounded-lg text-center">
      <p class="text-gray-500">帖子数</p>
      <p class="text-xl font-semibold text-gray-900">{{.AA}}</p>
    </div>
    <div class="p-4 bg-gray-100 rounded-lg text-center">
      <p class="text-gray-500">关注者</p>
      <p class="text-xl font-semibold text-gray-900">{{.AA}}</p>
    </div>
  </div>
</div>
{{end}}
